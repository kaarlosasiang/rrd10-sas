{
  "name": "rrd10-sas",
  "version": "1.0.0",
  "description": "RRD10-SAS Monorepo",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/ensure-better-auth-tsconfig-base.mjs",
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:api": "pnpm --filter api dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --recursive build",
    "build:api": "pnpm --filter api build",
    "build:frontend": "pnpm --filter frontend build",
    "build:validators": "pnpm --filter @rrd10-sas/validators build",
    "start:api": "pnpm --filter api start",
    "start:frontend": "pnpm --filter frontend start",
    "lint": "pnpm --recursive exec eslint",
    "clean": "pnpm --recursive exec rm -rf dist node_modules",
    "install:all": "pnpm install",
    "typecheck": "pnpm --recursive exec tsc --noEmit",
    "validators:watch": "pnpm --filter @rrd10-sas/validators dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {}
}

